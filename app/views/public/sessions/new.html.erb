<div class="container mt-5 d-flex justify-content-center align-items-center">
  <div class="card p-4" style="width: 320px; border: 1px solid #ddd;">
    <div class="mb-4 d-flex justify-content-center">
      <%= link_to root_path do %>
        <%= image_tag("hitoiki-logo.png", style: "width: 100px; height: 100px;") %>
      <% end %>
    </div>

    <div>
      <%= form_with model: @user, url: user_session_path do |f| %>
        <% if admin_signed_in? %>
          <div class="text-center">
            <span style="color: #ff5733;">管理者ログイン中</span>
          </div>
        <% elsif %>
          <div class="mb-3">
            <% f.label :email %>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control", style: "background-color: #fafafa;" %>
          </div>

          <div class="mb-3">
            <% f.label :password %>
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control", style: "background-color: #fafafa;" %>
          </div>

          <div class="d-grid">
            <%= f.submit "ログイン", class: "btn btn-primary form-control", style: "border-radius: 10px;" %>
          </div>

          <hr class="my-3">

          <div>
            <%= link_to "ゲストログイン（閲覧用）",users_guest_sign_in_path, class: "btn btn-secondary form-control sign_in", style: "border-radius: 10px;", method: :post %>
          </div>
        <% end %>
      <% end %>
    </div>

    <hr class="mt-3 mb-4">

    <div class="text-center">
      <%= render "public/shared/links", class: "btn btn-link" %>
    </div>
  </div>
</div>
<div class="text-center my-3" style="font-size: 0.8em; color: #888;">
  <span>© hogehoge All Rights Reserved</span>
</div>