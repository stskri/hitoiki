<% inquiries.each do |inquiry| %>
  <div class="col mb-3">
    <%= link_to inquiry_path(inquiry) do %>
      <div class="card">
        <div class="card-body d-flex justify-content-between position-relative"">
          <div>
            <%= I18n.t("enums.inquiry.genre.#{inquiry.genre}") %>
          </div>
          <div class="pt-2 pr-2" style="position: absolute; top: 0; right: 0; font-size: 10px;">
            <%= l inquiry.created_at, format: :long %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
<% end %>