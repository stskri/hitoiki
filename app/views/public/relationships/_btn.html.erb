<% if current_user != post.user %>
  <% if current_user.following?(post.user) %>
    <%= link_to "Unfollow", user_relationships_path(post.user_id), method: :delete, class: "btn btn-info" %>
  <% else %>
    <%= link_to "Follow", user_relationships_path(post.user_id), method: :post, class: "btn btn-success" %>
  <% end %>
<% end %>
