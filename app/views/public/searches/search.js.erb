<% if @model == "user" %>

  $("#search_users").append('<%= j render 'public/users/users_ajax', users: @records %>');
  <% if @records.next_page %>
    $("#search_more_users_btn").html('<%= j link_to_next_page @records, "さらに読み込む", class: "btn btn-info btn-sm", remote: true %>');
  <% else %>
    $("#search_more_users_btn").remove();
    $("#search_users").append('<div class="my-4 d-flex justify-content-center text-muted" style="font-size: 12px;">最下部です</div>')
  <% end %>

<% elsif @model == "post" %>

  $("#search_posts").append('<%= j render 'public/posts/posts_ajax', posts: @records %>');
  <% if @records.next_page %>
    $("#search_more_posts_btn").html('<%= j link_to_next_page @records, "さらに読み込む", class: "btn btn-info btn-sm", remote: true %>');
  <% else %>
    $("#search_more_posts_btn").remove();
    $("#search_posts").append('<div class="my-4 d-flex justify-content-center text-muted" style="font-size: 12px;">最下部です</div>')
  <% end %>
<% end %>