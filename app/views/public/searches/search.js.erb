<% if @model == "user" %>

<% elsif @model == "post" %>
  $("#search_posts").append('<%= j render 'public/posts/posts_ajax', posts: @records %>');

  <% if @records.next_page %>
    $("#search_posts_more_btn").html('<%= j link_to_next_page @records, "さらに読み込む", class: "btn btn-info btn-sm", remote: true %>');
  <% else %>
    $("#search_posts_more_btn").remove();
    $("#search_posts").append('<div class="my-4 d-flex justify-content-center text-muted" style="font-size: 12px;">最下部です</div>')
  <% end %>
<% end %>