<div style="position: sticky; top: 0; background-color: white; z-index: 5; background-color: rgba(255, 255, 255, 0.9);">
  <hr class="mt-0" style="border-color: #fff;">
  <div class="py-2 px-2">
    <%= render 'form' %>
  </div>
  <hr>
</div>

<% if @model == 'user' %>
  <div class="container py-4">
    <div id="search_users" class="row row-cols-1">
      <%= render 'public/users/users_ajax', users: @records %>
    </div>
    <div class="d-flex justify-content-center my-4" id="search_more_users_btn">
      <%= link_to_next_page @records, 'さらに読み込む', class: "btn btn-info btn-sm", remote: true, params: { controller: 'public/searches', action: 'search' } %>
    </div>
  </div>
<% elsif @model == 'post' %>
  <div class="container py-4">
    <div id="search_posts" class="row row-cols-1">
      <%= render 'public/posts/posts_ajax', posts: @records %>
    </div>
  </div>
  <div class="d-flex justify-content-center my-4" id="search_more_posts_btn">
    <%= link_to_next_page @records, 'さらに読み込む', class: "btn btn-info btn-sm", remote: true, params: { controller: 'public/searches', action: 'search' } %>
  </div>
<% end %>