<div style="position: sticky; top: 0; background-color: white; z-index: 5; background-color: rgba(255, 255, 255, 0.9);">
  <hr class="mt-0" style="border-color: #fff;">
  <div class="py-2 px-2">
    <%= render 'form' %>
  </div>
  <hr>
</div>

<% if @model == 'user' %>
  <h5 class="text-center">ユーザー検索 "<%= @content %>"</h5>
  <%= render 'public/users/users', users: @records %>
<% elsif @model == 'post' %>
  <h5 class="text-center">投稿検索 "<%= @content %>"</h5>
  <div class="container py-4">
    <div id="search_posts" class="row row-cols-1">
      <%= render 'public/posts/posts', posts: @records %>
    </div>
  </div>
  <div class="d-flex justify-content-center my-4" id="search_posts_more_btn">
    <%= link_to_next_page @records, 'さらに読み込む', class: "btn btn-info btn-sm", remote: true, params: { controller: 'public/searches', action: 'search' } %>
  </div>
<% end %>