$("#posts").append('<%= j render 'posts_ajax', posts: @posts %>');

<% if @notifications.next_page %>
  $("#posts_more_btn").html('<%= j link_to_next_page @posts, "さらに読み込む", class: "btn btn-info btn-sm", remote: true %>');
<% else %>
  $("#posts_more_btn").remove();
  $("#posts").append('<div class="my-4 d-flex justify-content-center text-muted" style="font-size: 12px;">最下部です</div>')
<% end %>