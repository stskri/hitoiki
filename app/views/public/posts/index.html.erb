<div style="position: sticky; top: 0; z-index: 5; background-color: rgba(255, 255, 255, 0.9);">
  <hr class="mt-0" style="border-color: #fff;">
  <div class="d-flex justify-content-between align-items-center">
    <span class="small m-0 pl-3">全ての投稿</span>
    <%= link_to "フォローしているユーザーの投稿", following_post_path, class: "btn btn-sm btn-light" %>
  </div>
  <hr class="mb-0">
</div>

<div class="new-post-path-icon border rounded-circle" style="position: fixed; bottom: 85px; right: 15px; z-index: 5; background-color: #007bff;">
  <%= link_to new_post_path do %>
    <div class="d-flex justify-content-center align-items-center" style="width: 50px; height: 50px;">
      <i class="fa-solid fa-plus fa-lg" style="color: #fff;"></i>
    </div>
  <% end %>
</div>

<div class="container py-4">
  <div class="row row-cols-1" id="posts">
    <%= render 'posts_ajax', posts: @posts %>
  </div>
  <div class="d-flex justify-content-center my-4" id="posts_more_btn">
    <%= link_to_next_page @posts, 'さらに読み込む', class: "btn btn-info btn-sm", remote: true, params: { controller: 'public/posts', action: 'index' } %>
  </div>
</div>
