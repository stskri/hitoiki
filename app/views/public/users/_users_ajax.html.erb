<% users.each do |user| %>
  <div class="col mb-2">
    <div class="card mx-3 my-1">
      <div class="users-list">
        <%= link_to user_path(user), class: 'd-flex align-items-center card-body px-3 py-1' do %>
          <div class="d-flex align-items-center">
            <%= image_tag user.get_image(50, 50), class: "rounded-circle mr-2", style: "width: 50px; height: 50px;" %>
            <div class="pl-2">
              <p class="mb-0"><%= user.name %></p>
            </div>
          </div>
        <% end %>
        <div class="d-flex align-items-center" id="follow_btn_<%= user.id %>">
          <%= render 'public/relationships/btn', user: user %>
        </div>
      </div>
    </div>
  </div>
<% end %>
