<div class="container py-4">
  <div class="row row-cols-1">
    <% users.each do |user| %>
      <div class="col mb-2">
        <div class="card d-flex mx-3 my-1">
          <div class="d-flex justify-content-between">
            <%= link_to user_path(user), class: 'card-body px-3 py-1' do %>
              <div class="d-flex align-items-center">
                <%= image_tag user.get_image(50, 50), class: "rounded-circle mr-2", style: "width: 50px; height: 50px;" %>
                <%= user.name %>
              </div>
            <% end %>
            <div class="d-flex align-items-center pr-3" id="follow_btn_<%= user.id %>">
              <%= render 'public/relationships/btn', user: user %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>