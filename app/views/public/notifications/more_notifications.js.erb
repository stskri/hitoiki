$("#notifications").append('<hr class="my-1 mx-4">');

$("#notifications").append('<%= j render "public/notifications/notification", notifications: @notifications %>');

<% if @notifications.next_page %>
  $("#load_more_btn").html('<%= j link_to_next_page @notifications, "さらに読み込む", class: "btn btn-info btn-sm", remote: true %>');
<% else %>
  $("#load_more_btn").remove();
<% end %>