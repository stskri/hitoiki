<div style="position: sticky; top: 0; background-color: white; z-index: 5; background-color: rgba(255, 255, 255, 0.9);">
  <hr class="mt-0" style="border-color: #fff;">
  <div class="d-flex justify-content-center align-items-center">
    <h4 class="m-0">メッセージルーム</h4>
  </div>
  <hr class="mb-0">
</div>

<% @rooms.each do |room| %>
  <div class="row">
    <%= link_to room_path(room) do %>
      <div class="col mx-4">
        <div class="py-2 d-flex">
          <div class="col-auto">
            <% users_id = Entry.where(room_id: room.id).pluck(:user_id) %>
            <% users_id.each do |user_id| %>
              <% if user_id != current_user.id %>
                <% user = User.find(user_id) %>
                <%= image_tag user.get_image(40, 40), class: "rounded-circle", style: "width: 40px; height: 40px;" %>
                <%= user.name %>
              <% end %>
            <% end %>
          </div>
          <div class="d-flex justify-content-between" style="flex-grow: 1;">
            <div class="d-flex align-items-center text-muted">
              <%# 該当するメッセージルームから、最も最新のメッセージ内容を１つ取得 %>
              <%= room.messages.order(created_at: :desc).limit(1).pluck(:message).first %>
            </div>
            <div class="d-flex align-items-end text-muted" style="font-size: 12px;">
              <%= room.messages.order(created_at: :desc).limit(1).first &. created_at &. then { |date| l(date, format: :long) } %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
  <hr class="m-0">
<% end %>
