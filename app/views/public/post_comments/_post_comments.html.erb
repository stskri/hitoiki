<% post_comments.each do |post_comment| %>
<hr>
  <div class="row">
    <div class="col-1">
      <%= link_to user_path(post_comment.user), class: "d-flex" do %>
        <%= image_tag post_comment.user.get_image(50, 50), class: "rounded-circle" %>
      <% end %>
    </div>
    <div class="col-11">
      <div class="d-flex justify-content-between">
        <div class="my-1">
          <%= link_to post_comment.user.name, user_path(post_comment.user) %>
        </div>
        <span class="text-muted small"><%= l post_comment.created_at, format: :long %></span>
      </div>
      <span>
        <%= post_comment.comment %>
      </span>
    </div>
  </div>
<% end %>