<div id="admin_inquiry_<%= inquiry.id %>">
  <div class="card" style="<%= 'background-color: #dcdcdc;' if inquiry.is_active == false %>">
    <div class="p-2 card-body position-relative">
      <div class="pt-1 pr-2" style="position: absolute; top: 0; right: 0; font-size: 10px;">
        <%= l inquiry.created_at, format: :long %>
        <div class="w-100 d-flex justify-content-center" id="mark_as_resolved_btn">
          <%= render 'mark_as_resolved', inquiry: inquiry %>
        </div>
      </div>

      <%= link_to admin_user_path(inquiry.user) do %>
        <div>
          <%= image_tag inquiry.user.get_image(35,35), class: "rounded-circle", style: "width: 35px; height: 35px;" %>
          <span class="pr-2"><%= inquiry.user.name %></span>
        </div>
      <% end %>

      <hr class="m-2">

      <%= link_to admin_inquiry_path(inquiry), style: "text-decoration: none;" do %>
        <div class="d-flex justify-content-center">
          <div style="line-height: 35px;">
            <%= I18n.t("enums.inquiry.genre.#{inquiry.genre}") %>
          </div>
        </div>

        <hr class="m-2">

        <div class="w-100 px-2">
          <%= truncate(inquiry.body, length: 100) %>
        </div>
      <% end %>
    </div>
  </div>
</div>