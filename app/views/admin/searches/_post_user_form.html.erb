<div class="container">
  <div class="row">
    <div class="col gap-2">
      <%= form_with url: search_admin_searches_path, method: :get, class: "d-flex" do |f| %>
        <%= f.text_field :content, placeholder: "検索キーワード", class: "form-control mr-2", value: @content %>
        <%= f.select :model, options_for_select({ "ユーザー" => "user", "投稿" => "post" }, @model), {}, {class: "mr-2 form-select text-center", style: "color: #495057; border-color: #ced4da; border-radius: 0.25rem;"} %>
        <%= f.select :method, options_for_select({ "部分一致" => "partial", "前方一致" => "forward", "後方一致" => "backward", "完全一致" => "perfect" }, @method), {}, {class: "mr-2 form-select text-center", style: "color: #495057; border-color: #ced4da; border-radius: 0.25rem;"} %>
        <%= f.submit '検索', class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>