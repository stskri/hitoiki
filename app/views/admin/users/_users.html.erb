<div class="container">
  <div class="row row-cols-1">
    <% users.each do |user| %>
      <div class="col mb-2">
        <div class="card d-flex mx-3 my-1" style="<%= 'background-color: #dcdcdc;' if user.is_active == false %>">
          <div class="w-100">
            <%= link_to admin_user_path(user), class: 'd-flex justify-content-between align-items-center card-body px-3 py-1' do %>
              <div class="d-flex align-items-center">
                <%= image_tag user.get_image(50, 50), class: "rounded-circle mr-2", style: "width: 50px; height: 50px;" %>
                <span class="pl-2"><%= user.name %></span>
              </div>
              <div class="d-flex align-items-center pr-3">
                <span>投稿数：<%= user.posts.count %> 件</span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>