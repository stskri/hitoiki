<div style="position: sticky; top: 0; background-color: white; z-index: 5; background-color: rgba(255, 255, 255, 0.9);">
  <hr class="mt-0" style="border-color: #fff;">
  <h6 class="py-2 d-flex justify-content-center">いいねした投稿：<%= @user.favorited_posts.count %> 件</h6>
  <hr>
</div>

<div class="container py-0">
  <div class="row">
    <div class="container py-4">
      <div id ="admin_user_favorited_posts" class="row row-cols-1">
        <%= render 'admin/posts/posts_ajax', posts: @favorited_posts %>
      </div>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center my-4" id="admin_more_user_favorited_posts_btn">
  <%= link_to_next_page @favorited_posts, 'さらに読み込む', class: "btn btn-info btn-sm", remote: true, params: { controller: 'admin/users', action: 'user_favorite' } %>
</div>