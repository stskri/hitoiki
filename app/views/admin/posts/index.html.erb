<div class="mt-4">
  <div class="container py-4">
    <div class="row row-cols-1" id="posts">
      <%= render 'posts', posts: @posts %>
    </div>
    <div class="d-flex justify-content-center my-4" id="posts_more_btn">
      <%= link_to_next_page @posts, 'さらに読み込む', class: "btn btn-info btn-sm", remote: true, params: { controller: 'admin/posts', action: 'index' } %>
    </div>
  </div>
</div>
