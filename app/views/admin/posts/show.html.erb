<div class="container px-5 pt-5">
  <div>
    <%= link_to admin_user_path(@post.user) do %>
      <%= image_tag @post.user.get_image(70, 70), class: "rounded-circle" %>
      <%= @post.user.name %>
    <% end %>
  </div>

  <div class="py-5" style="font-size: 1.1rem;">
    <%= @post.body %>
  </div>

  <div class="text-muted small">
    <%= l @post.created_at %>
  </div>

  <div class="gradient-line my-2" style="height: 8px; <%= gradient_style(@post) %>"></div>

  <div class="row mt-2 d-flex justify-content-around">
    <div>
      <i class="fa-solid fa-mug-saucer" aria-hidden="true"></i>
      <%= @post.favorites.count %>
    </div>
    <div>
      <i class="fa-regular fa-comment"></i>
      <%= @post.post_comments.count %>
    </div>
    <div>
      <i class="fa-solid fa-pen"></i>
    </div>
    <div>
      <%= link_to admin_post_path(@post), method: :delete, data: { confirm: '本当に削除しますか？'} do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </div>
  </div>
</div>

<div class="container px-5 pb-5">
  <div class="row">
    <div class="col">
      <%= render 'admin/post_comments/post_comments', post_comments: @post_comments %>
    </div>
  </div>
</div>
