<div style="position: sticky; top: 0; background-color: white; z-index: 5; background-color: rgba(255, 255, 255, 0.9);">
  <hr class="mt-0" style="border-color: #fff;">
  <div class="d-flex justify-content-center align-items-center">
    <div class="mr-3">ルームID: <%= @room.id %></div>
    <% @room.users.each do |user| %>
      <%= link_to admin_user_path(user), class: "d-flex justify-content-center align-items-center" do %>
        <%= image_tag user.get_image(50,50), class: "rounded-circle mr-2", style: "width: 50px he;" %>
        <%= user.name %>
      <% end %>
    <% end %>
  </div>
  <hr style="border-color: #fff;">
</div>

<div class="container pb-5">
  <div class="row">
    <div class="col" id="messages">
      <%= render 'admin/messages/messages', messages: @messages, room: @room %>
    </div>
  </div>
</div>